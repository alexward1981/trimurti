// Common classes
.strong,
.bold {
  font-weight: bold;
}

.em,
.italic {
  font-style: italic;
}

.hide {
  // This hides the content for everyone, even most screen readers
  // won't see this
  display: none;
}

.vishide {
  // This is only visually hidden screen readers will still be able
  // to read this text
  position: absolute;
  left: -9999px;
  top: -9999px;
}

